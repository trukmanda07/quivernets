---
// Cross-linking component between blog posts and presentations
// Shows a toggle/switch banner to switch between formats

interface Props {
  presentationSlug?: string;
  blogSlug?: string;
  currentType: 'blog' | 'presentation';
  language?: string;
}

const { presentationSlug, blogSlug, currentType, language = 'en' } = Astro.props;

// Determine the link and text based on current type
const isOnBlog = currentType === 'blog';
const targetSlug = isOnBlog ? presentationSlug : blogSlug;
const targetUrl = isOnBlog
  ? `/${language}/presentations/${presentationSlug}`
  : `/${language}/blog/${blogSlug}`;

// Only show if target exists
if (!targetSlug) return null;
---

<div class="presentation-toggle-banner">
  {isOnBlog ? (
    <!-- Show when on blog post -->
    <div class="bg-gradient-to-r from-blue-50 to-purple-50 border-2 border-blue-300 rounded-lg p-4 my-6 flex items-center justify-between gap-4 hover:shadow-lg transition-shadow">
      <div class="flex items-center gap-3">
        <div class="text-4xl">üìä</div>
        <div>
          <p class="font-bold text-lg text-gray-800">Also Available as Interactive Presentation</p>
          <p class="text-sm text-gray-600">Learn visually with slides and animations</p>
        </div>
      </div>
      <a
        href={targetUrl}
        class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors flex items-center gap-2 whitespace-nowrap"
      >
        View Presentation
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      </a>
    </div>
  ) : (
    <!-- Show when on presentation -->
    <div class="bg-gradient-to-r from-green-50 to-teal-50 border-2 border-green-300 rounded-lg p-3 flex items-center justify-between gap-4">
      <div class="flex items-center gap-3">
        <div class="text-3xl">üìù</div>
        <div>
          <p class="font-semibold text-gray-800">Prefer to read?</p>
          <p class="text-xs text-gray-600">View as detailed blog post</p>
        </div>
      </div>
      <a
        href={targetUrl}
        class="bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 rounded-lg transition-colors flex items-center gap-2 text-sm whitespace-nowrap"
      >
        Read Blog Post
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </a>
    </div>
  )}
</div>

<style>
  .presentation-toggle-banner {
    animation: slideIn 0.3s ease-out;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .presentation-toggle-banner > div {
      flex-direction: column;
      text-align: center;
    }

    .presentation-toggle-banner a {
      width: 100%;
      justify-content: center;
    }
  }
</style>
