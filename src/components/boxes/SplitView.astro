---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={`split-view ${className || ''}`}>
  <slot />
</div>

<style>
  .split-view {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin: 30px 0;
  }

  @media (max-width: 768px) {
    .split-view {
      grid-template-columns: 1fr;
    }
  }
</style>
