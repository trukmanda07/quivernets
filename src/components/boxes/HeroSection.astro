---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="hero-section">
  <h1>{title}</h1>
  {subtitle && <div class="hero-subtitle">{subtitle}</div>}
</div>

<style>
  .hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 60px 40px;
    border-radius: 15px;
    margin-bottom: 40px;
    text-align: center;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .hero-section h1 {
    font-size: 2.5em;
    margin: 0 0 20px 0;
    font-weight: bold;
  }

  .hero-subtitle {
    font-size: 1.3em;
    opacity: 0.95;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 1.8em;
    }
  }
</style>
