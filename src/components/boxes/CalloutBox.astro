---
interface Props {
  icon?: string;
}

const { icon } = Astro.props;
---

<div class="callout">
  {icon && <span class="callout-icon">{icon}</span>}
  <slot />
</div>

<style>
  .callout {
    border-left: 4px solid #ffc107;
    background: #fffbf0;
    padding: 15px 20px;
    margin: 20px 0;
    font-style: italic;
  }

  .callout-icon {
    margin-right: 8px;
  }
</style>
