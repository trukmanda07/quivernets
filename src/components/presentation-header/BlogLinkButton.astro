---
/**
 * BlogLinkButton.astro
 * Conditional button linking to related blog post
 */

import { useTranslations } from '../../utils/i18n';

interface Props {
  relatedBlogPost: string;
  currentLang: string;
}

const { relatedBlogPost, currentLang } = Astro.props;
const t = useTranslations(currentLang);
---

<a
  href={`/${currentLang}/blog/${relatedBlogPost}`}
  class="action-btn action-btn-blog"
  title={t.presentation.readBlog}
>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
  </svg>
  <span class="hidden sm:inline">{t.presentation.readBlog}</span>
</a>
